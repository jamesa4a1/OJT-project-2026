{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "index.js",
    "server.js",
    "seed.js",
    "add-staff-user.js",
    "update-db.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src",
    "public"
  ]
}
